}

<h2 style="margin-top: 130px; text-align: center ;font-family: avantgarde-demi; font-weight: bold ">DANH SÁCH GIỜ CHIẾU</h2>

<p style="font-family: 'Times New Roman'; font-size: 15px; color:black">
    @Html.ActionLink("Quay về danh sách quản lý", "Admin", "Admin")
    <br />
    @Html.ActionLink("Thêm Giờ Chiếu Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
