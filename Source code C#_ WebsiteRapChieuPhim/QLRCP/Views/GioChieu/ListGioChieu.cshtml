        <th>Giờ Chiếu</th>
        <th>
            Chức năng
            @*@Html.DisplayNameFor(model => model.TenTL)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaGioChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioChieu1)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaGioChieu }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.MaGioChieu }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaGioChieu })
            </td>
        </tr>
    }

</table>